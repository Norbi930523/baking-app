<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_x_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="ListItem">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="StepDescription">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/widget_margin</item>
        <item name="android:layout_marginLeft">@dimen/widget_margin</item>
        <item name="android:layout_marginStart">@dimen/widget_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_margin</item>
        <item name="android:layout_marginEnd">@dimen/widget_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="WidgetIngredientsList">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/widget_margin</item>
        <item name="android:layout_marginStart">@dimen/widget_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_margin</item>
        <item name="android:layout_marginEnd">@dimen/widget_margin</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
    </style>

</resources>
